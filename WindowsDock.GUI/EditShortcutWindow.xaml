<Window x:Class="WindowsDock.GUI.EditShortcutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WindowsDock :: Configuration :: Shortcut" Height="120" Width="500" ShowInTaskbar="False" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Border Style="{StaticResource border}">
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Label Content="Path:" Grid.Column="0" Grid.Row="0" Margin="2,0,0,0" />
            <Label Content="Args:" Grid.Column="0" Grid.Row="1" Margin="2,0,0,0" />
            <DockPanel Margin="0,0,0,4" Grid.Column="1" Grid.Row="0">
                <Button x:Name="btnBrowse" Content="Browse..." Click="btnBrowse_Click" Height="25" DockPanel.Dock="Right" Margin="4,0,0,0" Padding="4,0" />
                <TextBox x:Name="tbxPath" IsReadOnly="True" Height="25" Text="{Binding Path=Path}" />
            </DockPanel>
            <TextBox x:Name="tbxArgs" Height="25" Text="{Binding Path=Args}" Margin="0,0,0,4" Grid.Column="1" Grid.Row="1" />
        </Grid>
    </Border>
</Window>
